{
  "name": "expensify-bff",
  "version": "1.0.0",
  "description": "Backend for Frontend service for Expensify",
  "main": "dist/index.js",
  "_moduleAliases": {
    "@": "dist",
    "@/types": "dist/types",
    "@/utils": "dist/utils",
    "@/middleware": "dist/middleware",
    "@/routes": "dist/routes",
    "@/controllers": "dist/controllers",
    "@/services": "dist/services"
  },
  "scripts": {
    "build": "tsc",
    "start": "node -r module-alias/register dist/index.js",
    "dev": "nodemon src/index.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "postbuild": "echo 'Build completed successfully'",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "supabase:types": "supabase gen types typescript --project-id amsjunwtalmacvrzwmvz > ./src/types/database.ts"
  },
  "keywords": [
    "typescript",
    "nodejs",
    "express",
    "bff"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@azure/msal-node": "^3.8.0",
    "@supabase/supabase-js": "^2.58.0",
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.18.2",
    "helmet": "^7.1.0",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "node-cron": "^4.2.1",
    "openai": "^5.23.2",
    "redis": "^5.8.2",
    "zod": "^4.1.11",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.2",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
